@model MiniBlogiv2.Pages.Notes.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Usuń post</h1>

<h3 class="pogrubione">Czy jestes pewnien, że chcesz usunąć ten post?</h3>
<div>
    <div class="delete-post">
        <div>
            <span class="pogrubione2"> Tytuł: </span>@Html.DisplayFor(model => model.Note.Title) 
        </div>
 
        <div> 
            <span class="pogrubione2"> Opis: </span>@Html.DisplayFor(model => model.Note.Description)
        </div>
     
    </div>
   
