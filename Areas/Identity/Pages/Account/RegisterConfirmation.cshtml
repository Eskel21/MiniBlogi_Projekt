@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Potwierdzenie rejestracji";
}

<h1>@ViewData["Title"]</h1>
@{
    <div class="komunikat">
    @if (@Model.DisplayConfirmAccountLink)
    {
<p>
   
     <a id="confirm-link" href="@Model.EmailConfirmationUrl">Proszę kliknąć link aby potwierdzić rejestrację</a>
</p>
    }
    else
    {
<p>
        Proszę kliknąć w link aby potwierdzić rejestrację.
</p>
    }
    </div>
}

